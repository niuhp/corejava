<?xml version="1.0" encoding="UTF-8"?>
<configuration status="ALL">
	<appenders>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%class{36}.%M]- %msg%xEx%n" />
		</Console>
		<!-- <File name="log" fileName="./log/mybatis4j.log" append="true"> <PatternLayout 
			pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%class{36}.%M]- %msg%xEx%n" 
			/> </File> -->
		<RollingFile name="RollingFile" fileName="./logs/corejava.log"
			filePattern="./logs/$${date:yyyy-MM}/corejava-%d{MM-dd-yyyy}-%i.log.gz">
			<PatternLayout
				pattern="%d{yyyy-MM-dd 'at' HH:mm:ss z} %-5level %class{36} %L %M - %msg%xEx%n" />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="2 MB" />
			</Policies>
			<DefaultRolloverStrategy max="20" />
		</RollingFile>
	</appenders>
	<loggers>
		<root level="ALL">
			<appender-ref ref="console" />
			<!-- appender-ref ref="RollingFile" /-->
		</root>
	</loggers>
</configuration>